        {
          "policy_id": "POL-EMP-002",
          "policy_name": "Onboarding Process",
          "version": "2.1",
          "effective_date": "2024-01-01",
          "owner": "HR / Operations",
          "summary": "Processus d'intégration standardisé pour nouveaux employés",
          "details": {
            "pre_boarding": {
              "timeline": "J-7 to J-1",
              "actions": [
                "Envoi welcome email avec agenda première semaine",
                "Setup matériel (laptop, écrans, accès)",
                "Création comptes (email, Slack, GitHub, outils)",
                "Invitation à Slack et channels pertinents",
                "Attribution buddy/mentor"
              ]
            },
            "week_1": {
              "day_1": [
                "Welcome meeting avec CEO (30 min)",
                "Setup workspace et IT (2h)",
                "Lunch avec équipe",
                "Introduction à Arka OS et culture",
                "Tour des outils et processus"
              ],
              "day_2_to_5": [
                "1-on-1 avec manager (définir objectifs 30-60-90 jours)",
                "Meet & greet avec chaque département (30 min each)",
                "Formation produits Arka (Arka OS, HCM)",
                "Premiers petits tasks pour prendre en main",
                "Participation aux rituels équipe (standups, etc.)"
              ]
            },
            "week_2_to_4": {
              "objectives": "Devenir autonome sur son périmètre",
              "activities": [
                "Prendre ownership de vrais projets",
                "Weekly 1-on-1 avec manager",
                "Checkpoint 30 jours avec HR"
              ]
            },
            "end_of_trial": {
              "timeline": "3 mois",
              "process": "Evaluation formelle avec manager, décision confirmation/prolongation/fin"
            }
          },
          "success_metrics": ["Time to productivity", "30-day satisfaction score"],
          "related_documents": ["Onboarding checklist", "Welcome deck"]
        },
        {
          "policy_id": "POL-EMP-003",
          "policy_name": "Offboarding Process",
          "version": "1.5",
          "effective_date": "2023-06-01",
